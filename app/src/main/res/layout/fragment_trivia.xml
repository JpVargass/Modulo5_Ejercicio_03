<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pala3"
    tools:context=".TriviaFragment">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:text="Hola,..."
        android:textColor="@color/palb1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="294dp"
        android:layout_height="38dp"
        android:text="@string/QuePokemon"
        android:textColor="@color/palb2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="389dp" />

    <RadioGroup
        android:id="@+id/radioGroupPokemon"
        android:layout_width="269dp"
        android:layout_height="222dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gengar"
            style="@style/radioStyle" />

        <RadioButton
            android:id="@+id/radioButton2"
            style="@style/radioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raikou" />

        <RadioButton
            android:id="@+id/radioButton3"
            style="@style/radioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Furfrou" />

        <RadioButton
            android:id="@+id/radioButton4"
            style="@style/radioStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monferno" />
    </RadioGroup>

    <Button
        android:id="@+id/btnEnviar"
        style="@style/ColorBt"
        android:layout_width="145dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="78dp"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupPokemon" />
</androidx.constraintlayout.widget.ConstraintLayout>